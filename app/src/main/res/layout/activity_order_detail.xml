                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="去评价 >"
                        android:textColor="@color/app_text_color2"
                        android:textSize="@dimen/font_size_middle" />

                </RelativeLayout>

                <RelativeLayout
