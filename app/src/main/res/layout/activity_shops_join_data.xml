<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bk"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/activity_layout_head" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv1"
                        android:text="商家名称"
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/et_shops_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_gray_rim_shape2"
                        android:hint="请填写商家名称"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/app_text_color1"
                        android:textColorHint="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv2"
                        android:text="商家分类"
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <RelativeLayout
                        android:id="@+id/tv_choose_shops_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv2"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_gray_rim_shape2">

                        <TextView
                            android:id="@+id/tv_choose_shops_result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="请选择商家分类"
                            android:padding="10dp"
                            android:textColor="@color/app_text_color2"
                            android:textSize="@dimen/font_size_normal" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:src="@drawable/icon_arrow_pull_down" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv8"
                        android:text="商家详细地址"
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/et_shops_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv8"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_gray_rim_shape2"
                        android:hint="请填写商家详细地址"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/app_text_color1"
                        android:textColorHint="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv4"
                        android:text="真实姓名"
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/et_shopkeeper_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv4"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_gray_rim_shape2"
                        android:hint="请填写店主姓名"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/app_text_color1"
                        android:textColorHint="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv10"
                        android:text="手机号码"
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/et_shopkeeper_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv10"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_gray_rim_shape2"
                        android:hint="请填写商家手机号码"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/app_text_color1"
                        android:textColorHint="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv5"
                        android:text="身份证号"
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/et_shopkeeper_identity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv5"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_gray_rim_shape2"
                        android:digits="0123456789x"
                        android:hint="请填写店主身份证号"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/app_text_color1"
                        android:textColorHint="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv3"
                        android:text="商家区域"
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <RelativeLayout
                        android:id="@+id/rl_choose_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv3"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_gray_rim_shape2">

                        <TextView
                            android:id="@+id/tv_shop_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="请选择商家区域"
                            android:padding="10dp"
                            android:textColor="@color/app_text_color1"
                            android:textColorHint="@color/app_text_color2"
                            android:textSize="@dimen/font_size_normal" />

                        <ImageView
                            android:id="@+id/iv_shop_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:src="@drawable/icon_arrow_pull_down" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  "
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv9"
                        android:text="邀请码"
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/et_shops_rec_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv9"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_gray_rim_shape2"
                        android:hint="请填写邀请码（可选）"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/app_text_color1"
                        android:textColorHint="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv11"
                        android:text="营业执照"
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/et_shop_licence_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv11"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_gray_rim_shape2"
                        android:hint="请填写店铺营业执照号码"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/app_text_color1"
                        android:textColorHint="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv6"
                        android:text="手持身份证照"
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <RelativeLayout
                        android:id="@+id/rl_identity_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv6"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_dash_line_shape">

                        <TextView
                            android:id="@+id/tv_identity_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawablePadding="10dp"
                            android:drawableTop="@drawable/icon_identity_photo"
                            android:text="请添加手持身份证证件照"
                            android:textColor="@color/app_text_color2"
                            android:textSize="@dimen/font_size_normal" />

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/sdv_identity_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:visibility="gone"
                            fresco:placeholderImageScaleType="fitXY"
                            fresco:roundAsCircle="false" />

                        <ImageView
                            android:id="@+id/iv_del_identity_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="4dp"
                            android:src="@drawable/icon_del_photo"
                            android:visibility="gone" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv7"
                        android:text="营业执照"
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <RelativeLayout
                        android:id="@+id/rl_business_license"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv7"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_dash_line_shape">

                        <TextView
                            android:id="@+id/tv_business_license"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawablePadding="10dp"
                            android:drawableTop="@drawable/icon_identity_photo"
                            android:text="请添加有效营业执照"
                            android:textColor="@color/app_text_color2"
                            android:textSize="@dimen/font_size_normal" />

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/sdv_business_license"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:visibility="gone"
                            fresco:placeholderImageScaleType="fitXY"
                            fresco:roundAsCircle="false" />

                        <ImageView
                            android:id="@+id/iv_del_business_license"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="4dp"
                            android:src="@drawable/icon_del_photo"
                            android:visibility="gone" />

                    </RelativeLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_submit_apply"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_top_bar"
                    android:layout_margin="50dp"
                    android:background="@drawable/btn_red_selector"
                    android:gravity="center"
                    android:text="提交申请"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</layout>