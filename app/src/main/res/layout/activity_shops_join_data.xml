<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_text_color"
        android:fitsSystemWindows="true">

        <include layout="@layout/activity_layout_head" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_layout_title"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/main_text_color"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_img_info"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_add_banner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/icon_add"
                        android:padding="50dp"
                        android:text="点击添加店铺轮播图"
                        android:textColor="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_vp_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:background="#60000000"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_middle"
                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:text="*"
                        android:textColor="@color/main_text_color1"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv0"
                        android:text="店铺LOGO"
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <ImageView
                        android:id="@+id/tv_add_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_add_pic" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/main_bk" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/main_text_color1"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:id="@+id/tvv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv1"
                        android:text="店铺名称："
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/et_shops_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tvv1"
                        android:background="@null"
                        android:hint="请填写店铺名称"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/app_text_color1"
                        android:textColorHint="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/main_bk" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/main_text_color1"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:id="@+id/tvv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv4"
                        android:text="店主姓名："
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/et_shopkeeper_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tvv4"
                        android:background="@null"
                        android:hint="请填写店主姓名"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/app_text_color1"
                        android:textColorHint="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/main_bk" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/main_text_color1"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:id="@+id/tvv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv5"
                        android:text="身份证号："
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/et_shopkeeper_identity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tvv5"
                        android:background="@null"
                        android:digits="0123456789x"
                        android:hint="请填写店主身份证号"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/app_text_color1"
                        android:textColorHint="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/main_bk" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/main_text_color1"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:id="@+id/tvv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv2"
                        android:text="行业分类："
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <RelativeLayout
                        android:id="@+id/tv_choose_shops_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tvv2">

                        <TextView
                            android:id="@+id/tv_choose_shops_result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="点击后进行分类的选择"
                            android:padding="10dp"
                            android:textColor="@color/app_text_color1"
                            android:textColorHint="@color/app_text_color2"
                            android:textSize="@dimen/font_size_normal" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_right_enter" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/main_bk" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/main_text_color1"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:id="@+id/tvv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv3"
                        android:text="所在区域："
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <RelativeLayout
                        android:id="@+id/rl_choose_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tvv3">

                        <TextView
                            android:id="@+id/tv_shop_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="点击选择"
                            android:padding="10dp"
                            android:textColor="@color/app_text_color1"
                            android:textColorHint="@color/app_text_color2"
                            android:textSize="@dimen/font_size_normal" />

                        <ImageView
                            android:id="@+id/iv_shop_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_right_enter" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/main_bk" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/main_text_color1"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:id="@+id/tvv8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv8"
                        android:text="详细地址："
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/et_shops_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tvv8"
                        android:background="@null"
                        android:hint="街道 楼牌号等"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/app_text_color1"
                        android:textColorHint="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />

                    <!--<ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_right_enter" />-->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/main_bk" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/main_text_color1"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:id="@+id/tvv12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv12"
                        android:text="坐标选择："
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <RelativeLayout
                        android:id="@+id/rl_choose_coordinate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tvv12">

                        <TextView
                            android:id="@+id/tv_choose_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="点击选择"
                            android:padding="10dp"
                            android:textColor="@color/app_text_color1"
                            android:textColorHint="@color/app_text_color2"
                            android:textSize="@dimen/font_size_normal" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_right_enter" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/main_bk" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/main_text_color1"
                        android:textSize="@dimen/font_size_big" />

                    <TextView
                        android:id="@+id/tvv10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv10"
                        android:text="手机号码："
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/et_shopkeeper_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tvv10"
                        android:background="@null"
                        android:hint="请填写商家手机号码"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/app_text_color1"
                        android:textColorHint="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/main_bk" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/main_text_color1"
                        android:textSize="@dimen/font_size_big"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tvv9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tv9"
                        android:text="邀请码："
                        android:textColor="@color/app_text_color1"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/et_shops_rec_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tvv9"
                        android:background="@null"
                        android:hint="请填写邀请码"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/app_text_color1"
                        android:textColorHint="@color/app_text_color2"
                        android:textSize="@dimen/font_size_normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/main_bk" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_submit_apply"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_top_bar"
                    android:layout_margin="50dp"
                    android:background="@drawable/btn_white_normal_shape"
                    android:gravity="center"
                    android:text="确认提交"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/font_size_normal" />

            </LinearLayout>
        </ScrollView>

        <include layout="@layout/activity_layout_foot" />

    </RelativeLayout>
</layout>